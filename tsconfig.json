{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
